<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ub.pis2017.marccalvino.appdivises.MainActivity">

    <TextView
        android:text="@string/d2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/numDS"
        android:layout_toRightOf="@+id/numDS"
        android:layout_toEndOf="@+id/numDS"
        android:id="@+id/tTipusDS"
        android:textSize="30sp" />

    <TextView
        android:text=" %"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textAlignment="viewStart"
        android:layout_alignBottom="@+id/numEP"
        android:layout_toRightOf="@+id/numEP"
        android:layout_toEndOf="@+id/numEP" />

    <TextView
        android:text="@string/d1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tTipusDE"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/numDE"
        android:layout_toRightOf="@+id/numDE"
        android:layout_toEndOf="@+id/numDE" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/numDS"
        android:textAlignment="textEnd"
        android:singleLine="true"
        android:hint="0"
        android:clickable="false"
        android:editable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignBottom="@+id/tTipusDE"
        android:layout_toRightOf="@+id/tTipusDE"
        android:layout_toEndOf="@+id/tTipusDE"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <Button
        android:text="@string/sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bSwipe"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tTipusDS"
        android:layout_toStartOf="@+id/tTipusDS"
        android:layout_marginBottom="80dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/numEP"
        android:singleLine="true"
        android:textAlignment="textEnd"
        android:hint="0"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/introPer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp" />

    <CheckBox
        android:text="@string/percentCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/introPer"
        android:layout_alignTop="@+id/bSwipe"
        android:layout_toLeftOf="@+id/numDS"
        android:layout_toStartOf="@+id/numDS" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="46dp"
        android:id="@+id/numDE"
        android:singleLine="true"
        android:hint="0"
        android:textAlignment="viewEnd"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
